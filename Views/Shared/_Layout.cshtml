<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - SportStoreAutoFac</title>

    <link rel="shortcut icon" href="~/favicon.ico">
    <link rel="icon" type="image/png" sizes="192x192" href="~/favicon.ico">


    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

    @RenderSection("BeforeStyles", required: false)


    <link rel="stylesheet" id="css-main" href="~/css/dashmix.css">
    <link rel="stylesheet" id="css-main" href="~/css/custom.css">
    @RenderSection("AfterStyles", required: false)

</head>

<body>
    <!-- Page Container -->
    <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed">

        @await Html.PartialAsync("Partials/_Sidebar.cshtml")
        @await Html.PartialAsync("Partials/_Header.cshtml")

        <main id="main-container">

            <div class="content">
                <div class="block block-rounded">
                    <div class="block-content">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer -->
        <footer id="page-footer" class="bg-body-light">
            <div class="content py-0">
                <div class="row font-size-sm">
                    <div class="col-sm-6 order-sm-2 mb-1 mb-sm-0 text-center text-sm-right">
                        Crafted with <i class="fa fa-heart text-danger"></i> by <a class="font-w600" href="https://1.envato.market/ydb" target="_blank">IntelliSoft</a>
                    </div>
                    <div class="col-sm-6 order-sm-1 text-center text-sm-left">
                        <a class="font-w600" href="https://1.envato.market/r6y" target="_blank">IntelliTickets 1.0</a> &copy; <span data-toggle="year-copy"></span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/js/dashmix.core.min.js"></script>
    <script src="~/js/dashmix.app.min.js"></script>

<!-- Page JS Plugins -->
<script src="~/js/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/js/plugins/datatables/dataTables.bootstrap4.min.js"></script>
<script src="~/js/plugins/datatables/buttons/dataTables.buttons.min.js"></script>
<script src="~/js/plugins/datatables/buttons/buttons.print.min.js"></script>
<script src="~/js/plugins/datatables/buttons/buttons.html5.min.js"></script>
<script src="~/js/plugins/datatables/buttons/buttons.flash.min.js"></script>
<script src="~/js/plugins/datatables/buttons/buttons.colVis.min.js"></script>

<!-- Page JS Code -->
@*<script src="~/js/pages/be_tables_datatables.min.js"></script>*@


@RenderSection("AfterContent", required: false)


<script>
    jQuery(() => {
        // Init full extra DataTable
        jQuery('.js-dataTable-full-pagination').dataTable({
            pagingType: "full_numbers",
            pageLength: 10,
            lengthMenu: [[5, 10, 20], [5, 10, 20]],
            autoWidth: false
        });

        // Init simple DataTable
        jQuery('.js-dataTable-simple').dataTable({
            pageLength: 10,
            lengthMenu: false,
            searching: false,
            autoWidth: false,
            dom: "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-6'i><'col-sm-6'p>>"
        });
    })
</script>
</body>
</html>
