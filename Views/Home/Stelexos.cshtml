@model List<Ticket>
@{
    ViewData["Title"] = "Stelexos";
}
@section AfterContent {
    <script src="~/js/plugins/summernote/summernote-bs4.min.js"></script>

    <!-- Page JS Helpers (Summernote plugin) -->
    <script>
        jQuery(function() {
            //Dashmix.helpers('summernote');

            $(".list-group-item").click(function() {
                var id = $(this).attr("id").split("t-")[1];
                $("#ticket-details").load("/Tickets/Details/"+id);
            });

            $("#new-ticket").click(function ()
            {
                $("#ticket-details").html("");
                $("#ticket-details").load("/Tickets/Create/");
            });

        });
    </script>
}
@section BeforeStyles {
    <link rel="stylesheet" href="~/js/plugins/summernote/summernote-bs4.css">
}



@await Html.PartialAsync("Partials/_ticktesList", Model)