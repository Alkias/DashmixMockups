@model UserToLogin
@{
    Layout = null;
    ViewData["Title"] = "Είσοδος";
}
<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - SportStoreAutoFac</title>

    <link rel="shortcut icon" href="~/favicon.ico">
    <link rel="icon" type="image/png" sizes="192x192" href="~/favicon.ico">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" id="css-main" href="~/css/dashmix.min.css">
</head>

<body>

<div id="page-container">

    <main id="main-container">

        <div class="bg-image" style="background-image: url('/media/photos/photo22@2x.jpg');">
            <div class="row no-gutters bg-primary-op">

                <div class="hero-static col-md-6 d-flex align-items-center bg-white">
                    <div class="p-3 w-100">

                        <div class="mb-3 text-center">
                            <a class="link-fx font-w700 font-size-h1" asp-controller="Account" asp-action="Login">
                                <span class="text-dark">Intelli</span><span class="text-primary">Tickets</span>
                            </a>
                            <p class="text-uppercase font-w700 font-size-sm text-muted">Είσοδος</p>
                        </div>

                        <div class="row no-gutters justify-content-center">
                            <div class="col-sm-8 col-xl-6">
                                <form class="js-validation-signin" asp-controller="Account" asp-action="Login" method="post">
                                    <div class="py-3">
                                        <div class="form-group">
                                            <input
                                                type="text"
                                                class="form-control form-control-lg form-control-alt"
                                                asp-for="UserName"
                                                placeholder="UserName">
                                        </div>
                                        <div class="form-group">
                                            <input type="password"
                                                   class="form-control form-control-lg form-control-alt"
                                                   asp-for="Password"
                                                   placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-block btn-hero-lg btn-hero-primary">
                                            <i class="fa fa-fw fa-sign-in-alt mr-1"></i> Είσοδος
                                        </button>
                                        <p class="mt-3 mb-0 d-lg-flex justify-content-lg-between">
                                            <a class="btn btn-sm btn-light d-block d-lg-inline-block mb-1" asp-controller="Account" asp-action="PasswordReminder">
                                                <i class="fa fa-exclamation-triangle text-muted mr-1"></i> Ξεχάσατε τον Κωδικό σας;
                                            </a>
                                            <a class="btn btn-sm btn-light d-block d-lg-inline-block mb-1" asp-controller="Account" asp-action="EkdilosiEndiaferonts">
                                                <i class="fa fa-plus text-muted mr-1"></i> Εκδήλωση Ενδιαφέροντος
                                            </a>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="hero-static col-md-6 d-none d-md-flex align-items-md-center justify-content-md-center text-md-center">
                    <div class="p-3">
                        <p class="display-4 font-w700 text-white mb-3">
                            Welcome to the future
                        </p>
                        <p class="font-size-lg font-w600 text-white-75 mb-0">
                            Copyright &copy; <span class="js-year-copy">2022</span>
                        </p>
                    </div>
                </div>

            </div>
        </div>

    </main>

</div>

<script src="~/js/dashmix.core.min.js"></script>
<script src="~/js/dashmix.app.min.js"></script>
</body>
</html>