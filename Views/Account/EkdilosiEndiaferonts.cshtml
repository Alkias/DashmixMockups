                                    </div>
                                    <div class="mb-4">
                                        <label asp-for="SurName"></label>
                                        <input type="text" class="form-control form-control-alt" asp-for="SurName">
                                        <span asp-validation-for="SurName" class="text-danger"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label asp-for="Email"></label>
                                        <input type="text" class="form-control form-control-alt" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label asp-for="Phone"></label>
                                        <input type="text" class="form-control form-control-alt" asp-for="Phone">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="Issue"></label>
                                        <textarea class="form-control form-control-alt" asp-for="Issue" rows="4" placeholder="Πληκτρολογήστε το αίτημά σας..."></textarea>
                                        <span asp-validation-for="Issue" class="text-danger"></span>
                                    </div>

                                    <div class="mb-4">
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#modal-terms">Όροι Χρήσης</a>
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="signup-terms" name="signup-terms">
                                            <label class="form-check-label" for="signup-terms">Συμφωνώ</label>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <button type="submit" class="btn w-100 btn-hero btn-primary">
                                            <i class="fa fa-fw fa-plus opacity-50 me-1"></i> Αποστολή
                                        </button>
                                    </div>
                                </form>
                            }

                        </div>
                    </div>
                    <div class="col-md-6 order-md-0 bg-xwork-op d-flex align-items-center">
                        <div class="block-content block-content-full px-lg-5 py-md-5 py-lg-6">
                            <div class="d-flex">
                                <a class="flex-shrink-0 img-link me-3" href="javascript:void(0)">
                                    <img class="img-avatar img-avatar-thumb" src="/media/avatars/avatar3.jpg" alt="">
                                </a>
                                <div class="flex-grow-1">
                                    <p class="text-white fw-semibold mb-1">
                                        The service was a valuable asset to improve our conversions and marketing efforts! Thank you!
                                    </p>
                                    <a class="text-white-75 fw-semibold" href="javascript:void(0)">Melissa Rice, CEO</a>
                                </div>
                            </div>
                        </div>
                    </div>
